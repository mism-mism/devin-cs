# Server configuration
PORT=3000
NODE_ENV=development

# LINE configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# LINE MCP Server configuration
LINE_MCP_SERVER_PORT=3001
LINE_MCP_SERVER_PATH=/webhook/line-mcp
LINE_MCP_CLIENT_ID=your_line_mcp_client_id
LINE_MCP_CLIENT_SECRET=your_line_mcp_client_secret

